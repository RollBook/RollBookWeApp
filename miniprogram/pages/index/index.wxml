<!--index.wxml-->

<!-- 导航栏 -->
<robok-nav-bar/>

<view class="container">
  <!-- 轮播图 -->
  <robok-swiper items="{{imgList}}"/>

  <!-- 功能模块 -->
  <view class="flex-box">

    <!-- 商城 -->
    <view id="1" class="flex-item" bindtap="navigateTo">
      <view>
        <image class="item-svg" src="../../img/mall.svg"/>
        <view>
          商城
        </view>
      </view>
    </view>

    <!-- 上架 -->
    <view id="2" class="flex-item" bindtap="navigateTo">
      <image class="item-svg" src="../../img/sell.svg"/>
      <view>
        上架
      </view>
    </view>

    <!-- 存取 -->
    <view id="3" class="flex-item" bindtap="scan">
      <image class="item-svg" src="../../img/access.svg"/>
      <view>
        存取
      </view>
    </view>

    <!-- 敬请期待 -->
    <view id="4" class="flex-item" bindtap="navigateTo">
      <image class="item-svg" src="../../img/more.svg"/>
      <view>
        敬请期待
      </view>
    </view>

  </view>

</view>
